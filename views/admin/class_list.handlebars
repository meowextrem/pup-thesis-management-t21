<div class="container">
	<div class="panel panel-default">
    <a href="/admin/class/create" class="btn"><button type="button" class="btn btn-block btn-success">ADD CLASS</button></a>
    <div class="panel-heading">
      <h3>Class</h3>
    </div>

    <div class="panel-body">
      <table class="table">
        <thead>
          <tr>
            <th>Batch</th>
            <th>Section</th>
            <th>Adviser</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          {{#each classList}}
            <tr>
              <td>{{this.batch}}</td>
              <td>{{this.section}}</td>
              <td>{{this.prefix}} {{this.first_name}} {{this.middle_name}} {{this.last_name}} {{this.suffix}}</td>
              <td>
                <form action="/admin/class/list" method="post">
                  <input type="hidden" value="{{this.id}}" name="classId">
                  <input type="hidden" value="{{this.advisor_id}}" name="advisorId">
				  <button type="submit" class="btn btn-success" value="view" name="view">View</button>
                  <input type="submit" class="hidden" value="delete" name="delete" id="btn{{this.id}}">
				  <button type="submit" class="btn btn-danger" value="{{this.id}}">Delete</button>
                </form></td>
            </tr>
          {{/each}}
        </tbody>
      </table>
    </div>

  </div>
</div>


    


<script type="text/javascript">
$(document).ready(function(){


  $(".deleteButton").click(function(){
    if (window.confirm("Are you sure?")){
      $("#btn"+$(this).val()).trigger("click")
    }
  })



   
});
</script>